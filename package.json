{
  "name": "@gander/monkey-skyrimcommands",
  "author": "Adam GÄ…sowski",
  "private": true,
  "version": "0.5.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "release": "dotenv -c production release-it --"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitArgs": [
        "-S"
      ]
    },
    "github": {
      "release": true,
      "draft": true,
      "assets": [
        "dist/**/*.js"
      ],
      "releaseName": "v${version}"
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "after:bump": [
        "npm run build",
        "auto-changelog --package --commit-limit false --template keepachangelog --hide-credit"
      ]
    }
  },
  "dependencies": {
    "vue": "3.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "auto-changelog": "^2.4.0",
    "dotenv-cli": "^7.2.1",
    "release-it": "^16.1.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.12",
    "vite-plugin-monkey": "^3.3.1",
    "vue-tsc": "^1.0.9"
  }
}
